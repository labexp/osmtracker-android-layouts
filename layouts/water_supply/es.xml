<layouts>
	
	<!--Layout principal, se despliega primero-->
	<layout name="root">
		<!--Botones de acción especial-->
		<row>
			<button type="picture" icon="logo_camera"/>
			<button type="textnote" icon="logo_textnote"/>
			<button type="voicerec" icon="logo_voice"/>
		</row>
		<!--Botones estándares para mapear pozos de agua -->
		<row>
			<button type="tag" label="Nuevo pozo de agua" icon="water_supply_icons/new_water_supply.png"/>
			<button type="tag" label="Pozo de agua en uso" icon="water_supply_icons/used_water_supply.png"/>
			<button type="page" label="Pozo de agua contaminado" icon="water_supply_icons/contaminated_water_supply.png" targetlayout="contaminated"/>
		</row>
		
	</layout>
	
	 <!-- Contaminated layout, will be displayed when clicking on "Contaminated water supply" previous defined button -->
	<layout name="contaminated">
	
		<row>
			<!--Special action button to take a picture of the area-->
			<button type="picture" icon="logo_camera"/>
			<!--Standar tag buttons-->
			<button type="tag" label="Pozo rotulado" icon="water_supply_icons/signed.png" iconpos="top"/>
			<button type="tag" label="Pozo sin rotular" icon="water_supply_icons/unsigned.png" iconpos="top"/>
		</row>
		
	</layout>

</layouts>
