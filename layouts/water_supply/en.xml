<!--Layout example-->

<layouts>
	
	<!--Main layout, first to be displayed-->
	<layout name="root">
		<!--Special action Buttons-->
		<row>
			<button type="picture" icon="logo_camera"/>
			<button type="textnote" icon="logo_textnote"/>
			<button type="voicerec" icon="logo_voice"/>
		</row>
		<!--Standar tag buttons for mapping different kinds of water supplies -->
		<row>
			<button type="tag" label="New water supply" icon="water_supply_icons/new_water_supply.png"/>
			<button type="tag" label="Actual used water supply" icon="water_supply_icons/used_water_supply.png"/>
			<button type="page" label="Contaminated water supply" icon="water_supply_icons/contaminated_water_supply.png" targetlayout="contaminated"/>
		</row>
		
	</layout>
	
	 <!-- Contaminated layout, will be displayed when clicking on "Contaminated water supply" previous defined button -->
	<layout name="contaminated">
	
		<row>
			<!--Special action button to take a picture of the area-->
			<button type="picture" icon="logo_camera"/>
			<!--Standar tag buttons-->
			<button type="tag" label="Signed water supply" icon="water_supply_icons/signed.png" iconpos="top"/>
			<button type="tag" label="Unsigned water supply" icon="water_supply_icons/unsigned.png" iconpos="top"/>
		</row>
		
	</layout>

</layouts>
